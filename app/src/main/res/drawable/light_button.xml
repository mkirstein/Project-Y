<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/colorLightButtonPressedBackground" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <solid
                android:color="@color/colorLightButtonBackground" />
            <stroke
                android:width="3dp"
                android:color="@color/colorAccent" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid
                android:color="@color/colorLightButtonBackground" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>
</selector>